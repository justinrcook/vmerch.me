/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
/ [if gt IE 8]><!
%html.no-js
	/ <![endif]
	%head
		%meta{:charset => "utf-8"}/
		%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
		%title
			- if yield_content(:title)
				= yield_content(:title)
				|
			= @site_name
		%meta{:content => "width=device-width", :name => "viewport"}/

		/ Le Styles
		%link{ :href => "#{css_dir}/vmerch.css", :rel => "stylesheet" }/
		%link{ :href => "#{css_dir}/colorbox.css", :rel => "stylesheet" }/

	%body{ :class => request.path.gsub('.html', '') }
		%header.container
			.row
				%h1.span8
					%a{ :href => '/' }
						%img{ :src => "#{images_dir}/logo.png", :alt => '' }
				.span4.say_hello
					%a{ :href => 'mailto:hello@vmerch.me' }
						Say <span>hello</span>@vmerch.me

		.container
			%nav.clearfix
				%ul.unstyled.pull-right
					%li.web= link_to 'Web', '/web.html'
					%li.print= link_to 'Print', '/print.html'
					%li.illustration= link_to 'Illustration', '/illustration.html'
					%li.tangibles= link_to 'Tangibles', '/tangibles.html'
					%li.resume= link_to 'Resume', '/resume.html'
					%li.contact= link_to 'Contact', '/contact.html'

			%h1= yield_content(:title)
			= yield

	%footer.container
		&copy;
		= @site_name
		= Time.now.strftime("%Y")

	/
		Le javascript
		==================================================
	%script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"}
	:javascript
		window.jQuery || document.write('<script src="#{js_dir}/jquery.1.8.2.min.js"><\/script>')
	%script{:src => "#{js_dir}/bootstrap.min.js"}
	%script{:src => "#{js_dir}/jquery.colorbox-min.js"}
	= yield_content(:footer)

	/ Colorbox
	:javascript
		if ($(".colorbox").length > 0) {
			$(".thumbnail").colorbox({rel:"thumbnail"});
		}
